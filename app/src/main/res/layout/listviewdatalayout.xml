<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">
<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Date: "
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#53c5b9"
    android:layout_marginLeft="23dp"
    android:layout_marginStart="23dp"
    android:layout_marginTop="87dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:id="@+id/textViewDATE"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Date"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#FFFFFF"
    android:layout_alignBaseline="@+id/textView1"
    android:layout_alignBottom="@+id/textView1"
    android:layout_alignLeft="@+id/textViewDURATION"
    android:layout_alignStart="@+id/textViewDURATION" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Time: "
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#53c5b9"
    android:layout_marginTop="24dp"
    android:layout_below="@+id/textView1"
    android:layout_alignLeft="@+id/textView1"
    android:layout_alignStart="@+id/textView1" />

<TextView
    android:id="@+id/textViewTIME"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Time"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#FFFFFF"
    android:layout_alignBaseline="@+id/textView2"
    android:layout_alignBottom="@+id/textView2"
    android:layout_alignLeft="@+id/textViewDATE"
    android:layout_alignStart="@+id/textViewDATE" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Duration: "
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#53c5b9"
    android:layout_marginTop="19dp"
    android:layout_below="@+id/textView2"
    android:layout_alignLeft="@+id/textView2"
    android:layout_alignStart="@+id/textView2" />

<TextView
    android:id="@+id/textViewDURATION"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Duration"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#FFFFFF"
    android:layout_marginLeft="18dp"
    android:layout_marginStart="18dp"
    android:layout_alignBaseline="@+id/textView3"
    android:layout_alignBottom="@+id/textView3"
    android:layout_toRightOf="@+id/textView3"
    android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_above="@+id/textViewDATE"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginBottom="18dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#484684" />

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignLeft="@+id/textViewDATE"
        android:layout_alignStart="@+id/textViewDATE"
        android:layout_alignTop="@+id/textView5"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#484684" />

</RelativeLayout>